}

@model Livre

@{
    ViewBag.Title = "Modifier un Livre";
}

<h2>Modifier un Livre</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ISBN)

    <div class="form-group">
        @Html.LabelFor(model => model.ISBN)
        @Html.TextBoxFor(model => model.ISBN, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Titre)
        @Html.TextBoxFor(model => model.Titre, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Auteur)
        @Html.TextBoxFor(model => model.Auteur, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateEdition)
        @Html.TextBoxFor(model => model.DateEdition, new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Resume)
        @Html.TextAreaFor(model => model.Resume, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
}




